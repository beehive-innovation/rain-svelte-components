{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"addresses": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/EVMAddress"
			}
		},
		"name": {
			"type": "string"
		},
		"source": {
			"type": "string"
		},
		"commit": {
			"type": "string"
		},
		"description": {
			"type": "string"
		},
		"type": {
			"type": "string"
		},
		"expressions": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/Expression"
			}
		},
		"inputs": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/Input"
			}
		},
		"version": {
			"$ref": "#/definitions/Version"
		}
	},
	"required": ["addresses", "name", "source", "commit", "description", "type", "version"],
	"additionalProperties": false,
	"title": "Rain Contract Metadata",
	"description": "Schema for a contract",
	"definitions": {
		"EVMAddress": {
			"type": "object",
			"properties": {
				"chainId": {
					"type": "number"
				},
				"knownAddresses": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			},
			"required": ["chainId", "knownAddresses"],
			"additionalProperties": false,
			"description": "The address of the deployed contract for the specified chain."
		},
		"Expression": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"path": {
					"type": "string"
				},
				"contextColumns": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/ContextColumn"
					}
				}
			},
			"required": ["name", "description", "path"],
			"additionalProperties": false
		},
		"ContextColumn": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"cells": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/ContextCell"
					}
				}
			},
			"required": ["name"],
			"additionalProperties": false
		},
		"ContextCell": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				}
			},
			"required": ["name"],
			"additionalProperties": false
		},
		"Input": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"path": {
					"type": "string"
				}
			},
			"required": ["name", "path"],
			"additionalProperties": false
		},
		"Version": {
			"type": "object",
			"properties": {
				"major": {
					"type": "number"
				},
				"minor": {
					"type": "number"
				}
			},
			"required": ["major", "minor"],
			"additionalProperties": false,
			"description": "Version of this metadata"
		}
	}
}
